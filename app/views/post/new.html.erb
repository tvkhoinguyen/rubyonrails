<h1>Add a New Post</h1>


<%= form_for @post, url: post_index_path do |f| %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :content %><br/>
		<%= f.text_area :content %>
	</p>
	
	<p>
		<%= f.submit "Add a New Post",:disable_with=>"Loading..." %>
	</p>
<% end %>